MultiKeyTable=class(function (tbl, ...)
    tbl:new(...)
  end
  )

function MultiKeyTable:new()
    self.keys={}
    self.data={}
end
function MultiKeyTable:get_key(argcount, ... )
    local key=self.keys
    for i=1,argcount do
        local kk=select(i,...)
        if key[kk]==nil then
            key[kk]={}
        end
        key=key[kk]
    end
    return key
end
function MultiKeyTable:get(...)
    return self.data[self:get_key(select("#",...),...)]
end

function MultiKeyTable:set(...)
    local argcount=select("#",...)
    self.data[self:get_key(argcount-1,...)]=select(argcount,...)
end