function make_ident_matrix( w,h )
  local ret=make_float_buffer(w,h)
  for x=0,w-1 do
    for y=0,h-1 do
      if x==y then
        ret:set(x,y,1)
      else
        ret:set(x,y,0)
      end
    end
  end
  return ret
end
